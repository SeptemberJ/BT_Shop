.container{
    margin-bottom: 40rpx;
}
.wxParse-p{
    text-indent: 60rpx;
}
.listItem{
  width: 100%;
  height: auto;
}
swiper{
    height: 240px;
}
swiper-item image{
    width: 100%;
}
.swipeNavTit{
    width: 710rpx;
    height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}
.bigTit{
    width: 710rpx;
    font-size: 34rpx;
    color: #555555;
}
.smallTit{
    width: 710rpx;
    color: #9d9d9d;
}
.priceBar{
    width: 710rpx;
    height: 100rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.priceBar view{
    /*width: 100%;*/
    height: 50rpx;
    line-height: 50rpx;
    color: #fff;
}
.price{
    width: 200rpx;
    background: #b08957;
    text-align: center;
    /*background-image:  url('../../image/icon/flag.png') round;*/
}
.reference{
    width: 100%;
    text-align: right;
    padding-right: 20rpx;
}
/*ware big and small title*/
.threeBlocks{
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin: 15rpx auto;
}
.rate{
    width: calc(100% - 240rpx);
    height: 80rpx;
    display: flex;
    align-items: center;
}
.rate image{
    width: 300rpx;
    height: 50rpx;
}
.evaluate{
    width: 140rpx;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}
.evaluate image{
    width: 50rpx;
    height: 50rpx;
}
.favorite{
    width: 100rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.favorite image{
    width: 50rpx;
    height: 50rpx;
}

/*ware evaluates*/
.shortLine{
    width: 150rpx;
    height: 1px;
    background: #cdcdcd;
}
.navTitle{
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    color: #999999;
}
.navTitle text{
    font-size: 32rpx;
}
.evaluates{
    width: 710rpx;
    height: auto;
    display: flex;
    flex-direction: column;
    margin: 40rpx auto;
}
.evaluates_item{
    width: 710rpx;
    height: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 20rpx auto;
}
.evaluates_item:not(:first-of-type){
    border-top: 1px solid #f5f5f5;
}
.evaluates_item_top{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 20rpx auto;
}
.left{
    display: flex;
    flex-direction: row;
}
.left, .right{
    width: 100%;
}
.left image{
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
    border-radius: 50%;
}
.right{
    text-align: right;
    color: #999999;
}
.evaluates_item_bot{
    width: 100%;
    margin: 20rpx auto;
    text-align: left;
}
.loadMore{
    color: #b08957;
}


/*introduction*/
.introduction{
    width: 710rpx;
    height: auto;
    display: flex;
    flex-direction: column;
    margin: 40rpx auto;
}
.introduction_content text{
    color: #555555;
}
/*footer_total*/
.footer_total{
    width:100%;
    height:auto;
    display:flex;
    flex-direction:column;
    align-items: center;
    justify-content:space-between;
    position:fixed;
    bottom:0;
    background: rgba(0, 0, 0, 0.8);
    border-top: 1rpx solid #eee;
}
.changeQuantity{
    width:100%;
    height:80rpx;
    display:flex;
    flex-direction:row;
    align-items: center;
    justify-content: space-between;
    color: #fff;
    
}
.changeQuantity text{
    width: 100%;
    text-align: center;
    color: #fff;
}
.close{
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: flex-end;
}
.close image{
    width: 50rpx;
    height:50rpx;
}
/*商品加减按钮*/
/*stepper容器*/
.stepper {
	border: 1px solid #ccc;
	border-radius: 3px;
	width: 100%;
	/*height: 26px;*/
    height: calc(100% - 2px);
    display: flex;
    flex-direction: row;
	margin:0 auto;
}


/*加号与减号*/
.stepper text {
    width: 100%;
	/*width: 19px;*/
	line-height: 75rpx;
	text-align: center;
	float: left;
}

/*数值*/
.stepper input {
	color: #fff;
	float: left;
	margin: 0 auto;
	/*width: 30px;*/
    width: 100%;
	/*height: 26px;*/
    height: 100%;
	text-align: center;
	font-size: 12px;
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
}

/*普通样式*/
.stepper .normal{
	/*color: black;*/
}

/*禁用样式*/
.stepper .disabled{
	color: black;
}
.btBar{
    width:100%;
    height:80rpx;
    display:flex;
    flex-direction:row;
}
.payBt, .addCartBt, .confirm{
    width: 100%;
    height: 100%;
    font-size: 36rpx;
    color: #fff;
    display:flex;
    flex-direction:row;
    align-items: center;
    justify-content:center;
}
.addCartBt{
    background: #fff;
    color: #000;
}
.payBt{
    background: #b08957;
}
.confirm{
    background: #f60;
}