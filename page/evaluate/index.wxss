.evaluates{
    width: 710rpx;
    height: auto;
    display: flex;
    flex-direction: column;
}
.evaluates_item{
    width: 710rpx;
    height: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 20rpx auto;
}
.evaluates_item:not(:first-of-type){
    border-top: 1px solid #f5f5f5;
}
.evaluates_item_top{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 20rpx auto;
}
.left{
    display: flex;
    flex-direction: row;
}
.left, .right{
    width: 100%;
}
.left image{
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
    border-radius: 50%;
}
.right{
    text-align: right;
    color: #999999;
}
.evaluates_item_bot{
    width: 100%;
    margin: 20rpx auto;
    text-align: left;
}