page{
  /*background: #f5f5f5;*/
  background: #fff;
}
.goods{
  width: 100%;
  height: 100%;
  /*margin: 10rpx 1% 0 1%;*/
  display: flex;
  flex-direction: row;
  align-items:flex-start;
}
.menu_block{
  width: 225rpx;
  height: 100%;
  float: left;
  display: flex;
  
}
.menu_block_inner{
  width: 225rpx;
  display: flex;
  flex-direction: column;
  /*margin-top: 10rpx;*/
}
/*menuListF*/
.menuListF_items{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  font-size: 30rpx;
  /*border-top: 1rpx solid #b08957;*/
  border-bottom: 1rpx solid #b08957;
}
.active{
  width: calc(100% - 8rpx);
  /*background: #b08957;*/
  font-weight: bold;
  color: #b08957;

}
/*menuListS_items*/
.menuListS_items{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav_item{
  width: 100%;
  height: auto;
  /*height: 80rpx;*/
  display: flex;
  flex-direction: row;
  align-items: center;
  /*align-items: flex-start;*/
  justify-content:flex-start;
  margin-top: 10rpx;
}
.nav_item image{
  width: 40rpx;
  height: 40rpx;
  display: flex;
  /*margin: 10rpx auto;*/
}
.nav_item text{
  width: calc(100% - 40rpx);
  height: 100%;
  font-size: 30rpx;
}


/*ware_block*/
.ware_block{
  width:515rpx;
  height: 100%;
  float: left;
  display: flex;
  flex-direction: column;
  /*align-items:flex-start;
  background: #fff;
  padding:10rpx 10rpx 10rpx 0;*/
}
.ware_block_inner{
  width:515rpx;
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  background: #fff;
  padding:10rpx 10rpx 10rpx 0;
}
.banner{
  width:100%;
  height: 200rpx;
}
.banner image{
  width:100%;
  height: 200rpx;
}

/*wareClip*/
.wareClip{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /*align-items:flex-start;*/

}
.wareClip_item{
  width: 250rpx;
  height: 250rpx;
  display: block;
  /*flex-grow: 1;*/
  margin-top: 10rpx;
  /*background: #f4f4f4;*/
  /*padding: 10rpx;*/
}
.wareClip_item:nth-child(2n+0){
  margin-left: 15rpx;
}

.inner_block{
  width: 100%;
  height: 100%;
  /*margin: 0 2%;*/
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  overflow: hidden;
}

.img_block{
  width: 100%;
  height: 200rpx;
  /*margin: 0 2%;*/
}
.img_block image{
  width: 100%;
  height: 200rpx;
  display: block;
}
.stock{
  color: #333;
}
.standard{
  color: #333;
}
.description{
  background: #f1ece2;
  color: #c5b79d;
}
.price{
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #000;
  /*color: #b4282d;*/
}
.price text{
  /*display: flex;*/
  flex-grow: 1;
  color: #fff;
  line-height: 50rpx;
  padding-left:5rpx;
}
.price text:nth-of-type(2){
  text-align: right;
  padding-right:5rpx;
}
.price text:nth-of-type(2):before{
    content: "ï¿¥";
}
.noData{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-left: 2rpx solid #ccc;
}
.noData image{
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 10rpx;
}

