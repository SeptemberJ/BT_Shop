
.evaluate{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.good{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.good image{
  width:150rpx;
	height:150rpx;
  margin-right: 10rpx;
}
.starts{
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10rpx 0;
}
.starts text{
  width: 100%;
  height: auto;
  font-size: 32rpx;
}
.start{
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.start image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 10rpx;
}
.evaluateCont{
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.evaluateCont textarea{
  width: 100%;
  height: 250rpx;
  background: #f5f5f5;
  padding: 20rpx 5rpx;
}


.address-add {
	width: 100%;
	position: fixed;
	bottom: 0;
	background: #b08957;
	border-radius: 0;
	color: #fff;
	font-weight: bold;
}
.addHover{
	background: #ccc;
}