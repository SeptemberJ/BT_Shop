page{
	background: #f5f5f5;
}
.tab_block{
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	height: 88rpx;
	border-bottom: 2rpx solid #ddd;
	background: #fff;
}
.tab_item{
	height: 100%;
	display: flex;
	flex-grow: 1;
	align-items: center;
	justify-content: center;
}
/*.tab_item text{
	height: 100%;
}*/
.active{
	color:#ff4444;
	font-weight: bold;
	border-bottom: 5rpx solid #ff4444;
}

/*orderList*/
.orderList{
	width: 710rpx;
	height: auto;
	display: flex;
	flex-direction: column;
	margin: 20rpx auto 40rpx auto;
	padding: 10rpx 20rpx;
	background: #fff;
	color: #777;

}
.orderNo{
	/*height: 100rpx;
	display: flex;*/
  padding-top: 10rpx;
}
.sum{
	height: 100rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	/*border-bottom: 0rpx solid #eee;*/
	margin-bottom: 20rpx; 
}
.sum text{
	/*height: 100%;*/
	font-size: 36rpx;
}
.sum text:nth-of-type(2){
	color: #000;
	font-weight: bold;
}
.delivery_store{
	width: 100%;
	height: auto;
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: center;
	
}
.takeBySelf{
	width: 100%;
	height: auto;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
  margin: 5rpx auto;
}
.code{
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: center;
}
.goods{
	display: flex;
	flex-direction: column;
	border-top: 1rpx solid #eee;
	margin-top: 20rpx; 
}
.goods_item{
	height: 80rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
}
.goods_item text{
	line-height: 80rpx;

}
.good_name{
	width: 610rpx;
	height: 100%;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.good_amount{
	width: 100rpx;
	height: 100%;
	text-align: right;
}
.address{
	width: 100%;
	display: flex;
	flex-direction: column;
	padding: 10rpx auto;
	border-top: 2rpx solid #eee;
}
.address_item{
	height: auto;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	padding: 15rpx 0;
}
.operation{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
	margin-top: 20rpx; 

}
.evaluateBt,.cancelBt,.logisticsBt,.confirmBt,.payBt{
  width: 150rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f60;
  color: #fff;
  border-radius: 5rpx;
  margin: auto 10rpx;
}
.cancelBt,.logisticsBt{
  background: #fff;
  color: #000;
  border: 1px solid #ccc;
}

