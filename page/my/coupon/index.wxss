.columnTit{
	width: 700rpx;
	height: 80rpx;
	display: flex;
	align-items: center;
	margin:0 auto;
}
.coupon_block{
	width: 700rpx;
	height: 170rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	margin: 20rpx auto;
	background: #fff;
	padding: 0 5rpx;
	border-radius: 20rpx;
}
.member{
	background: #609ddc;
	color: #fff;
}
.img{
	width: 150rpx;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}
.img image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	overflow: hidden;
}
.mainInfo{
	width: 550rpx;
	height: 100%;
	display: flex;
	flex-direction: column;
	/*align-items: center;*/
	justify-content:space-around;
}
.cardTit{
	font-size: 34rpx;
	font-weight: bold;
}

